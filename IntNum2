import java.util.Scanner;

public class IntNum2 {
   public static int no;
   public static boolean isEven(int no) {
      if ((no%2)==0) 
      return true;
      
      else     
      return false;
      
   }
   public staic boolean isPositve(int no) {
      if (no >= 0)
      return true;
      
      else
      return false;
   }
   public static void display() {
      if (isEven(no)==true && isPositive(no)== true)
      System.out.println("The value is EVEN POSITVE");
      
      else if (isEven(no)==true && isPositive(no)== false)
      System.out.println("The value is EVEN NEGATIVE");
      
      else if (isEven(no)==false && isPositive(no)== true)
      System.out.println("The value is ODD POSITIVE");
      
      else if (isEven(no)==false && isPositive(no)== false)
      System.out.println("The value is EVEN ");
   }
    
}
